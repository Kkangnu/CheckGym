<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1111"
        android:textSize="70dp"
        android:textColor="#D7C49E"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="30dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/txt_value"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="1"
        android:textSize="50dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/txt_value"
        app:layout_constraintLeft_toRightOf="@+id/num_1"
        android:text="2"
        android:textSize="50dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/txt_value"
        app:layout_constraintLeft_toRightOf="@+id/num_2"
        android:text="3"
        android:textSize="50dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num_4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/num_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="4"
        android:textSize="50dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num_5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/num_2"
        app:layout_constraintLeft_toRightOf="@+id/num_4"
        android:text="5"
        android:textSize="50dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num_6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/num_3"
        app:layout_constraintLeft_toRightOf="@+id/num_5"
        android:text="6"
        android:textSize="50dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num_7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/num_4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="7"
        android:textSize="50dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num_8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/num_5"
        app:layout_constraintLeft_toRightOf="@+id/num_7"
        android:text="8"
        android:textSize="50dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num_9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/num_6"
        app:layout_constraintLeft_toRightOf="@+id/num_8"
        android:text="9"
        android:textSize="50dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num_del"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/num_7"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="â†"
        android:textSize="50dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num_0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/num_8"
        app:layout_constraintLeft_toRightOf="@+id/num_del"
        android:text="0"
        android:textSize="50dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/num_chek"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/num_9"
        app:layout_constraintLeft_toRightOf="@+id/num_0"
        android:text="OK"
        android:textSize="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
